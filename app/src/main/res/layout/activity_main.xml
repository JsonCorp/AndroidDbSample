<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장 메시지 : "/>

        <EditText
            android:id="@+id/main_message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/main_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"/>

    <Button
        android:id="@+id/main_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH"/>

    <Button
        android:id="@+id/main_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE"/>

    <!-- android:scrollbars="vertical" 설정 후 스크롤 동작을 위해
    setMovementMethod(new ScrollingMovementMethod()); 코드 추가 필요 -->
    <TextView
        android:id="@+id/main_log_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="bottom"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="vertical"
        android:textColor="#4C4C4C"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="30dp" />
</LinearLayout>